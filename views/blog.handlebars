<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    
  <p>
  </p>
  <div>
    <form id="comment-form">
      <div class="form-group">
        <label for="comment">Write a Comment:</label>
        <textarea class="form-control" id="comment-textarea" name="comment" rows="3"></textarea>
      </div>
      <button id="comment-button" type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
{{#each comments}}
<div class="comment">
  <h2>{{user.name}}</h2>
  {{{content}}}
</div>
{{/each}}
<script src="/js/comment.js"></script>